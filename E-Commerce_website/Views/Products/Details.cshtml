@{
  ViewData["Title"] = "Products";
}

<h1>All TravelAPI Products</h1>

<h3>Actions:</h3>

<p>@Html.ActionLink("Add a new product to the park", "Create")</p>

<h3>Products:</h3>
@using EcommerceSite.Models;

<img style="max-height: 300px; min-height: 250px; max-width: 600; object-fit: contain;" src="@Model.ImageLink"
  alt="@Model.Name"> <br>

<strong>Brand: @Model.Brand</strong> @Model.Type Name: @Model.Name <br>
Description: @Model.Description <br>
<button id="next-page-btn">Next Page</button>

<script>
  let pageNumber = 1;
  const nextPageBtn = document.getElementById('next-page-btn');

  nextPageBtn.addEventListener('click', () => {
    pageNumber++;
    const url = "@Url.Action("Index", "Products")?query=pageNumber=" + pageNumber;
    window.location.href = url;
  });
</script>