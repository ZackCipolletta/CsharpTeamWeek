@using EcommerceSite.Models;
<div id="footer">
@if (User.Identity.IsAuthenticated)
{
    @using EcommerceSite.Models;
<div id="footer" class="container-fluid">
    @if (User.Identity.IsAuthenticated)
    {
        <div id="login-status-message">
            <span style="font-size: 85%">logged in as</span>
            <span id="user-name">@User.Identity.Name</span>
        </div>
        <div class="row">
            <div class="col-md-6">
                @using (Html.BeginForm("LogOff", "Account"))
                {
                    <button type="submit" class="btn btn-link">Log out</button>
                }
            </div>
            <div class="col-md-6">
                <a href='@Url.Action("Index", "Home")'>
                    <button class="btn btn-link">Home</button>
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-12">
                <a href='@Url.Action("Index", "Account")'>
                    <button class="btn btn-link">Log in</button>
                </a>
            </div>
        </div>
    }
</div>
}